<div class="panel panel-default text-center" style="width:100%">
    <div class="panel-body">
      <h1>My Profile</h1>
    </div>
    <ul class="list-group">
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-2 text-center">
                    <img src="<%= @user.picture %>" class="profilePicture"> <br>
                    <h3><%= @user.username %></h3>
                    <p>Mail:
                        <a href="mailto:<%= @user.email %>?Subject=Hello" target="_blank"><%= @user.email %></a>
                    </p>
                    Contact: <%= @user.contact_link %>
                </div>
                <div class="col-md-8">
                    <blockquote>
                        <p class="text-left"><%= @user.bio %></p>
                        <small> 
                            <cite title="<%= @user.contact_link %>">
                                <%= @user.username %>
                            </cite>
                        </small>
                    </blockquote>
                </div>
                <div class="col-md-1"></div>
            </div>
        </li>   
        <li class="list-group-item">
            <hr>
            <h3>My Reviews</h3>
            <% @user.reviews.each do |review| %>
                <div id="<%= review.id %>">
                <hr>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-2"></div>
                        <div class="col-md-8"><h4><%= review.title %></h4></div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"></div>
                    <div class="col-md-2">
                        <img src="<%= review.school.logo %>" class="miniPicture"><br>
                        School: <%= review.school.name %>
                        </div>
                        <div class="col-md-8 text-justify">
                        <%= review.description %>
                        <h4>Rating: <%= review.rating %></h4>
                        </div>
                        <div class="col-md-1"></div>
                    </div>

                        <button class="btn btn-warning userReviewEdit">Edit</button>
                        <button class="btn btn-danger userReviewDelete">Delete</button>
                        <!--   <%= link_to "Delete", review, method: :delete, data:{confirm: "Are you sure you want to delete this review?",class:"btn btn-default userDelete"}%> -->  
                </div>
            <% end %> 
        </li>
    </ul>
</div>


