<form class="edit_school">
<div class="panel panel-default text-center" style="width:100%">
    <div class="panel-body">
      <h3>Edit School</h3>
    </div> 
    <ul class="list-group">
        <li class="list-group-item">
          <div class="form-horizontal">
            <fieldset>
                <div class = "form-group">
                  <label class="col-lg-2 control-label">Name:</label>
                  <div class="col-lg-10">
                    <input type="text" value="{{name}}" name="school[name]" id="school_name" class="form-control" />
                  </div>
                </div>
 
                <div class = "form-group">
                  <label class="col-lg-2 control-label">Webpage:</label>
                  <div class="col-lg-10">
                    <input type="text" value="{{webpage}}" name="school[webpage]" id="school_webpage" class="form-control" />
                  </div>
                </div>

                <div class = "form-group">
                  <label class="col-lg-2 control-label">Logo:</label>
                  <div class="col-lg-10">
                    <input type="text" value={{logo}} name="school[logo]" id="school_logo" class="form-control" />
                  </div>
                </div>

                <div class = "form-group">
                  <label class="col-lg-2 control-label">Address:</label>
                  <div class="col-lg-10">
                    <input type="text" value="{{address}}" name="school[address]" id="school_address" class="form-control" />
                  </div>
                </div>

                <div class = "form-group">
                  <label class="col-lg-2 control-label">Description:</label>
                  <div class="col-lg-10">
                    <input type="text" value="{{description}}" name="school[description]" id="school_description" class="form-control" />
                  </div>
                </div>
                <input type="submit" name="commit" value="Update School" class="btn btn-primary adminUpdate" />
            <fieldset>
          </div>
        </li>   
    </ul>
</div>
</form>